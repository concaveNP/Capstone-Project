<LinearLayout
    android:id="@+id/following_frame"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <fragment
        android:id="@+id/fragment_user_list"
        android:name="com.concavenp.artistrymuse.fragments.UserListFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        tools:layout="@layout/fragment_user_list"/>

    <fragment
        android:id="@+id/fragment_user_details"
        android:name="com.concavenp.artistrymuse.fragments.UserDetailsFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        tools:layout="@layout/fragment_user_details"/>

</LinearLayout>
