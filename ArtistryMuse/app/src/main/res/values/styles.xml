<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/myapp_primary_500</item>
        <item name="colorPrimaryDark">@color/myapp_primary_700</item>
        <item name="colorAccent">@color/myapp_accent_A200</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Card">
        <item name="android:background">@color/myapp_primary_800</item>
    </style>

    <style name="AppTheme.Card.Title">
        <item name="android:textSize">@dimen/myapp_text_size_card_material</item>
        <item name="android:fontFamily">@string/myapp_font_family_headline_material</item>
        <item name="android:textColor">@color/myapp_light_on_dark_primary_text</item>
    </style>

    <style name="AppTheme.Card.Byline">
        <item name="android:textSize">@dimen/myapp_text_size_card_material</item>
        <item name="android:fontFamily">@string/myapp_font_family_subhead_material</item>
        <item name="android:textColor">@color/myapp_light_on_dark_secondary_text</item>
    </style>

</resources>
