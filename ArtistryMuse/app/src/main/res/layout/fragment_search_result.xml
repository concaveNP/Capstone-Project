<ViewFlipper
    android:id="@+id/fragment_search_ViewFlipper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/fragment_search_searching_Flipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/fragment_search_result_progressbar_contentDescription"
            android:indeterminate="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/fragment_search_no_results_Flipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/fragment_search_result_no_results_contentDescription"
        android:gravity="center_vertical|center_horizontal"
        android:padding="@dimen/fab_margin"
        android:text="@string/fragment_search_result_no_results" />

    <TextView
        android:id="@+id/fragment_search_error_Flipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/fragment_search_result_error_contentDescription"
        android:gravity="center_vertical|center_horizontal"
        android:padding="@dimen/fab_margin"
        android:text="@string/fragment_search_result_error" />

    <TextView
        android:id="@+id/fragment_search_no_data_Flipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/fragment_search_result_no_data_contentDescription"
        android:gravity="center_vertical|center_horizontal"
        android:padding="@dimen/fab_margin"
        android:text="@string/fragment_search_result_no_data" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/search_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/half_margin"
        android:scrollbarStyle="outsideOverlay" />

</ViewFlipper>




