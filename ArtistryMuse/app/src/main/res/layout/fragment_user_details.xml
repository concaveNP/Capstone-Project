<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.concavenp.artistrymuse.fragments.UserDetailsFragment">

    <ViewFlipper
        android:id="@+id/fragment_user_details_ViewFlipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/fragment_user_details_TextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:padding="@dimen/fab_margin"
            android:text="There is no details info to display"/>

        <include layout="@layout/content_user_details"/>

    </ViewFlipper>

</FrameLayout>
