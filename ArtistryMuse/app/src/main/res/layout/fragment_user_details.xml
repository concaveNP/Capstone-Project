<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ViewFlipper
        android:id="@+id/fragment_user_details_ViewFlipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/fragment_user_details_TextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/fragment_user_details_text_details_contentDescription"
            android:gravity="center_vertical|center_horizontal"
            android:padding="@dimen/fab_margin"
            android:text="@string/no_details"/>

        <include layout="@layout/content_user_details"/>

    </ViewFlipper>

</FrameLayout>
