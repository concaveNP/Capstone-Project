<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginStart="4dp"
    android:layout_marginTop="4dp"
    android:clickable="true"
    android:focusable="true"
    style="@style/AppTheme.Card"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/header_ImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/profile_header_image_contentDescription"
            android:scaleType="fitCenter" />

        <include layout="@layout/subcontent_profile_fullname_username" />

        <TextView
            android:id="@+id/description_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppTheme.Card.Description"
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingBottom="@dimen/myapp_text_uncommon_padding_material"
            android:paddingStart="@dimen/myapp_text_edge_padding_material"
            android:paddingEnd="@dimen/myapp_text_edge_padding_material"
            android:paddingTop="@dimen/myapp_text_edge_padding_material"
            android:minLines="1" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/myapp_divider_material"
            android:background="@color/myapp_light_on_dark_dividers"
            android:visibility="gone" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/user_following_image_contentDescription"
                    android:paddingBottom="@dimen/myapp_text_uncommon_padding_material"
                    android:paddingEnd="@dimen/myapp_text_uncommon_padding_material"
                    android:paddingStart="@dimen/myapp_text_uncommon_padding_material"
                    android:paddingTop="@dimen/myapp_text_uncommon_padding_material"
                    app:srcCompat="@drawable/ic_people_black_24dp" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/followed_textview"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/user_followed_image_contentDescription"
                    android:paddingBottom="@dimen/myapp_text_uncommon_padding_material"
                    android:paddingEnd="@dimen/myapp_text_uncommon_padding_material"
                    android:paddingStart="@dimen/myapp_text_uncommon_padding_material"
                    android:paddingTop="@dimen/myapp_text_uncommon_padding_material"
                    app:srcCompat="@drawable/ic_people_outline_black_24dp" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/views_textView"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
