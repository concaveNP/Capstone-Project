<FrameLayout
    android:id="@+id/content_project_details"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/details_margin">

            <include layout="@layout/subcontent_profile_name_username" />

            <TextView
                android:id="@+id/description_TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/details_margin"
                android:contentDescription="@string/project_description_contentDescription"
                android:textAppearance="?android:attr/textAppearanceSmall"
                tools:text="Summary Description" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/details_margin"
                android:orientation="horizontal"
                android:weightSum="3"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/project_count_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/project_projects_count_contentDescription"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/zero_text"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/project_count_label_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/project_projects_count_contentDescription"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/projects_label_string"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/followed_TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/project_followed_count_contentDescription"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/zero_text"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/followed_label_TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/project_followed_count_contentDescription"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/followed_label_string"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/following_TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/project_following_count_contentDescription"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/zero_text"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/following_Label_TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/project_following_count_contentDescription"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/following_label_string"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ToggleButton
                    android:id="@+id/favorite_un_favorite_toggleButton"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/project_favorite_button_contentDescription"
                    android:textOff="@string/favorite_off_text"
                    android:textOn="@string/favorite_on_text" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/details_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ratings_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/project_average_rating_contentDescription"
                    android:text="@string/content_project_details_averageRatingValue"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/favorited_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/project_favorite_button_contentDescription"
                    android:text="@string/zero_text"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/ratings_Label_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/project_average_rating_contentDescription"
                    android:text="@string/rating_label_string"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/project_details_RecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <!--android:nestedScrollingEnabled="false"/>-->

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</FrameLayout>
