<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.concavenp.artistrymuse.ProjectDetailsActivity"
    tools:showIn="@layout/activity_project_details">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:text="Hi there" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
android:id="@+id/content_user_details_FrameLayout"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
app:layout_behavior="@string/appbar_scrolling_view_behavior">

<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


</android.support.v4.widget.NestedScrollView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/author_TextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/default_author_text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/username_TextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/details_margin"
        android:layout_weight="1"
        android:text="@string/default_username_text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:padding="@dimen/details_margin">

        <ImageView
            android:id="@+id/profile_ImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            app:srcCompat="@drawable/ic_account_circle_black_24dp" />

        <RelativeLayout
            android:id="@+id/details_Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginLeft="@dimen/details_margin"
            android:layout_marginStart="@dimen/details_margin">

            <TextView
                android:id="@+id/favorited_Label_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/favorited_label_string"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/favorited_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/favorited_Label_TextView"
                android:layout_toEndOf="@+id/favorited_Label_TextView"
                android:layout_toRightOf="@+id/favorited_Label_TextView"
                android:text="Favorited Count"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/ratings_Label_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/favorited_TextView"
                android:text="@string/rating_label_string"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/ratings_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ratings_Label_TextView"
                android:layout_toEndOf="@+id/ratings_Label_TextView"
                android:layout_toRightOf="@+id/ratings_Label_TextView"
                android:text="Average Rating Value"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/following_Label_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ratings_TextView"
                android:text="@string/following_label_string"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/following_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/following_Label_TextView"
                android:layout_toEndOf="@+id/following_Label_TextView"
                android:layout_toRightOf="@+id/following_Label_TextView"
                android:text="Following Count"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/followed_Label_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/following_TextView"
                android:text="@string/followed_label_string"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/followed_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/followed_Label_TextView"
                android:layout_toEndOf="@+id/followed_Label_TextView"
                android:layout_toRightOf="@+id/followed_Label_TextView"
                android:text="Followed By Count"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </RelativeLayout>

    </GridLayout>

    <ImageButton
        android:id="@+id/following_imageButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/followed_TextView"
        android:layout_weight="1"
        android:background="#00ffffff"
        android:src="@android:drawable/btn_star" />

    <TextView
        android:id="@+id/summary_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_marginTop="@dimen/details_margin"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/user_details_RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>

</FrameLayout>
