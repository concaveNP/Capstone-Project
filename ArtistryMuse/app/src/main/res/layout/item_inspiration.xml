<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">


    <!--public Long creationDate;-->
    <!--public String description;-->
    <!--public String imageUid;-->
    <!--public Long lastUpdateDate;-->
    <!--public String name;-->
    <!--public String uid;-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/AppTheme.Card"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/main_imageView"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppTheme.Card"
            android:orientation="vertical">

            <TextView
                android:text="Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/AppTheme.Card.Title"
                android:id="@+id/title_textView" />

            <TextView
                android:id="@+id/description_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/AppTheme.Card.Description"
                android:ellipsize="end"
                android:maxLines="3"
                android:paddingBottom="@dimen/myapp_text_uncommon_padding_material"
                android:paddingStart="@dimen/myapp_text_edge_padding_material"
                android:paddingEnd="@dimen/myapp_text_edge_padding_material"
                android:paddingTop="@dimen/myapp_text_edge_padding_material"
                android:minLines="1" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>