<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppTheme.Card"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/stats_card_title_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/profile_text_buttons_contentDescription"
            android:paddingBottom="@dimen/details_margin"
            android:paddingEnd="@dimen/details_margin"
            android:paddingStart="@dimen/details_margin"
            android:paddingTop="@dimen/card_top_padding"
            android:text="Images" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:paddingBottom="@dimen/card_top_padding"
            android:paddingEnd="@dimen/details_margin"
            android:paddingStart="@dimen/details_margin">

            <Button
                android:id="@+id/profile_header_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/profile_button_header_image_contentDescription"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:text="HEADER" />

            <Button
                android:id="@+id/profile_profile_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/profile_button_profile_image_contentDescription"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:text="AVATAR" />

        </GridLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
