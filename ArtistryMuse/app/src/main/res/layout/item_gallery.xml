<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginTop="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/AppTheme.Card"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/main_imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/item_gallery_image_main_contentDescription"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/item_gallery_text_title_contentDescription"
                style="@style/AppTheme.Card.Title"
                android:text="Title" />

            <TextView
                android:id="@+id/description_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/item_gallery_text_description_contentDescription"
                style="@style/AppTheme.Card.Description"
                android:ellipsize="end"
                android:maxLines="3"
                android:paddingBottom="@dimen/myapp_text_uncommon_padding_material"
                android:paddingStart="@dimen/myapp_text_edge_padding_material"
                android:paddingEnd="@dimen/myapp_text_edge_padding_material"
                android:paddingTop="@dimen/myapp_text_edge_padding_material"
                android:minLines="1" />

            <include layout="@layout/subcontent_ratings_views_favorited"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>