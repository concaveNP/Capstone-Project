<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppTheme.Card"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/stats_card_title_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/details_margin"
            android:paddingEnd="@dimen/details_margin"
            android:paddingStart="@dimen/details_margin"
            android:paddingTop="@dimen/card_top_padding"
            android:text="Image" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:paddingBottom="@dimen/card_top_padding"
            android:paddingEnd="@dimen/details_margin"
            android:paddingStart="@dimen/details_margin">

            <Button
                android:id="@+id/inspiration_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:text="INSPIRATION" />

        </GridLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
